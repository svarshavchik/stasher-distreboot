<optclass name="distreboot_options">

  <option>
    <name>start</name>
    <type>bool</type>
    <default>false</default>
    <longopt>start</longopt>
    <descr>Start the distributed reboot daemon</descr>

    <group>
      <option>
	<name>node</name>
	<type>std::string</type>
	<descr>The distribued object repository node to connect to</descr>
	<argdescr>directory</argdescr>
	<longopt>repo</longopt>
	<hasvalue />
      </option>
    </group>
  </option>

  <option>
    <name>stop</name>
    <type>bool</type>
    <default>false</default>
    <longopt>stop</longopt>
    <descr>Stop the distributed reboot daemon</descr>
  </option>

  <option>
    <name>reboot</name>
    <type>bool</type>
    <default>false</default>
    <longopt>reboot</longopt>
    <descr>Reboot all nodes</descr>
  </option>

  <option>
    <name>dry_run</name>
    <type>bool</type>
    <default>false</default>
    <longopt>dry-run</longopt>
    <descr>Show the order in which the nodes will get rebooted</descr>
  </option>

  <option>
    <name>cancel</name>
    <type>bool</type>
    <default>false</default>
    <longopt>cancel</longopt>
    <descr>Cancel reboots that have not begun yet</descr>
  </option>

  <mutex>
    <name>start</name>
    <name>stop</name>
    <name>reboot</name>
    <name>dry_run</name>
    <name>cancel</name>
  </mutex>

  <defaultoptions />
</optclass>
